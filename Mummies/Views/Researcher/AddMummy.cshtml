@{
    ViewData["Title"] = "Add Burial";
}
@*This is an add mummy page for researchers (will have a form, and possibly photo upload)*@

@model FagElGamousDatabaseByLocation

    <div class="container">
        <form method="post" asp-action="AddMummy">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col">


                    <h2>Basics</h2>
                    <br />
                    <!--Square-->
                    <div>
                        <label asp-for="Burialnors">North/South (N/S): </label>
                        <select class="form-control" id="northsouth" name="" asp-for="Burialnors">
                            <option value="N">North</option>
                            <option value="S">South</option>
                        </select>
                    </div>



                    <div>
                        <label asp-for="BurialAreaNorthOrSouthLower">Lower Bound: </label>
                        <input class="form-control" asp-for="BurialAreaNorthOrSouthLower" type="number" />
                    </div>



                    <div>
                        <label asp-for="BurialAreaNorthOrSouthUpper">Upper Bound: </label>
                        <input class="form-control" asp-for="BurialAreaNorthOrSouthUpper" type="number" />
                    </div>



                    <div>
                        <label asp-for="Burialxeorw">East/West (E/W): </label>
                        <select class="form-control" id="" name="" asp-for="Burialxeorw">
                            <option value="E">East</option>
                            <option value="W">West</option>
                        </select>
                    </div>



                    <div>

                        <label asp-for="BurialAreaEastOrWestLower">Lower Bound: </label>
                        <input class="form-control" asp-for="BurialAreaEastOrWestLower" type="number" />

                        <label asp-for="BurialAreaEastOrWestLower">Lower Bound: <script></script></label>
                        <input class="form-control" asp-for="BurialAreaEastOrWestLower" />

                    </div>



                    <div>
                        <label asp-for="BurialAreaEastOrWestUpper">Upper Bound: </label>
                        <input class="form-control" asp-for="BurialAreaEastOrWestUpper" type="number" />
                    </div>



                    <!--Area-->
                    <div>
                        <label asp-for="Square" for="">Area: </label>
                        <select class="form-control" id="area" name="area" asp-for="Square">
                            <option value="NE">NE</option>
                            <option value="NW">NW</option>
                            <option value="SE">SE</option>
                            <option value="SW">SW</option>
                        </select>
                    </div>


                   <!--Burial Number-->

                    <div>
                        <label asp-for="BurialNumber">Burial Number: </label>
                        <input class="form-control" type="number" asp-for="BurialNumber" type="number" />
                    </div>

                </div>

                <div class="col">


                    <h2>Metrics</h2>
                    <br />


                    <div>
                        <label asp-for="BurialSouthToHead">South to Head: </label>
                        <input class="form-control" asp-for="BurialSouthToHead" type="number"/>
                    </div>



                    <div>
                        <label asp-for="BurialSouthToFeet">South to Feet: </label>
                        <input class="form-control" asp-for="BurialSouthToFeet" type="number"/>
                    </div>



                    <div>
                        <label asp-for="BurialWestToHead">West to Head: </label>
                        <input class="form-control" asp-for="BurialWestToHead" type="number" />
                    </div>



                    <div>
                        <label asp-for="BurialWestToFeet">West to Feet: </label>
                        <input class="form-control" asp-for="BurialWestToFeet" type="number"/>
                    </div>



                    <div>
                        <label asp-for="Length">Length: </label>
                        <input class="form-control" asp-for="Length" type="number"/>
                    </div>



                    <div>
                        <label asp-for="BurialDepth">Depth: </label>
                        <input class="form-control" asp-for="BurialDepth" type="number"/>
                    </div>


                    <h2>Observation</h2>
                    <br />


                    <div>
                        <label asp-for="Photo">Photo: </label>
                        <select class="form-control" id="photo" name="Photo" asp-for="Photo">
                            <option value="Y">Yes</option>
                            <option selected value="N">No</option>
                        </select>
                    </div>



                    <div>
                        <label asp-for="Goods">Burial Goods: </label>
                        <select class="form-control" id="goods" name="Goods" asp-for="Goods">
                            <option value="Y">Yes</option>
                            <option selected value="N">No</option>
                            <option value="U">Unknown</option>
                        </select>
                    </div>


                    <div asp-validation-summary="All"></div>
                    

                </div>
                <br />
            </div>
            <div class="col-12 text-center pb-5"><button type="submit" class="btn byu-color text-center text-white">Submit</button></div>
        </form>

    </div>

