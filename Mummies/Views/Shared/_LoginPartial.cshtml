@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<byu-user-info slot="user">
    <a slot="user-name" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    <a slot="logout" href="javascript:{}" onclick="document.getElementById('my_form').submit();">Logout</a>
        <form id="my_form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        </form>
    <a slot="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
</byu-user-info>